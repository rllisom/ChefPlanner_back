              "listen": "test",
              "script": {
                "exec": [
                  "// 1. Validate response status is 201 (or 2xx)",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response status is 2xx\", function () {",
                  "    pm.response.to.be.success;",
                  "});",
                  "",
                  "// 2. Parse the JSON response",
                  "let jsonData;",
                  "try {",
                  "    jsonData = pm.response.json();",
                  "    console.log(\"Response parsed successfully:\", JSON.stringify(jsonData));",
                  "} catch (e) {",
                  "    console.error(\"Failed to parse JSON response:\", e.message);",
                  "}",
                  "",
                  "// 3. Check that the token field exists in the response",
                  "pm.test(\"Token field exists in response\", function () {",
                  "    pm.expect(jsonData).to.have.property(\"token\");",
                  "    pm.expect(jsonData.token).to.be.a(\"string\").and.not.empty;",
                  "});",
                  "",
                  "// 4. Save the token to the environment variable \"TOKEN\"",
                  "if (jsonData && jsonData.token) {",
                  "    pm.environment.set(\"TOKEN\", jsonData.token);",
                  "    // 5. Log a success message",
                  "    console.log(\"✅ TOKEN saved to environment successfully:\", jsonData.token);",
                  "} else {",
                  "    // 5. Log an error message",
                  "    console.error(\"❌ Failed to save TOKEN: token field not found in response.\");",
                  "}"
                ],
